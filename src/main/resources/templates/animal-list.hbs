{{#partial "content"}}
    <h1 class="title1"><u>Spotted Animals</u></h1><br>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h3><u>Non-endangered Animals</u></h3>
                <div class="thumbnail">
                    <center>
                        <h4>Animal: Lion</h4>
                        <h4>Location: Zone A</h4>
                        <h4>Ranger Name: Dwight</h4>
                    </center>
                </div>
                {{#each Animals}}
                <div class="thumbnail">
                    <center>
                        <h4>Animal: {{ name }}</h4>
                        <h4>Location: {{ location }}</h4>
                        <h4>Ranger Name: {{ ranger }}</h4>
                    </center>
                </div>
                {{/each}}
            </div>

            <div class="col-md-6">
                <h3><u>Endangered Animals</u></h3>
                <div class="thumbnail">
                    <center>
                        <h4>Animal: Rhino</h4>
                        <h4>Health: Okay</h4>
                        <h4>Age: Adult</h4>
                        <h4>Location: Zone B</h4>
                        <h4>Ranger Name: Michael</h4>
                    </center>
                </div>
    {{#each Animals}}
                <div class="thumbnail">
                    <center>
                        <h4>Animal: {{ name }}</h4>
                        <h4>Health: {{ health }}</h4>
                        <h4>Age: {{ age }}</h4>
                        <h4>Location: {{ location }}</h4>
                        <h4>Ranger Name: {{ ranger }}</h4>
                    </center>
                </div>
    {{/each}}
            </div>
        </div>
    </div>


{{/partial}}

{{> layout.hbs}}