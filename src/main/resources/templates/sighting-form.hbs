{{#partial "content"}}
    <h1 class="title1"><u>What animal did you spot?</u></h1><br><br>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="thumbnail">
                <center>
                <h3><u>Non-endangered Animal</u></h3>
                <form class="forming" action='/sighting_success'>
                    <div class="form-group">
                        <label for="name">Animal Species</label>
                        <input id="name" name="name" class="form-control" type="text">
                    </div>
                    <div class="form-group">
                        <label for="location">Location Sighted</label>
                        <input id="location" name="location" class="form-control" type="text">
                    </div>
                    <div class="form-group">
                        <label for="ranger">Your Name</label>
                        <input id="ranger" name="ranger" class="form-control" type="text">
                    </div>
                    <button type="submit" class="btn btn-secondary">Submit Form</button>
                </form>
                </center>
                </div>Samora Yommie
            </div>
            <div class="col-md-6">
                <div class="thumbnail">
                <center>
                <h3><u>Endangered Animal</u></h3>
                <form class="forming" action='/sighting_success'>
                    <div class="form-group">
                        <label for="name">Animal Species</label>
                        <input id="name" name="name" class="form-control" type="text">
                    </div>
                    <div class="form-group">
                        <label for="health">Animal Health</label>
                        <select name="health">
                            <option>Sick</option>
                            <option>Okay</option>
                            <option>Healthy</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="age">Animal Age</label>
                        <select name="age">
                            <option>Newborn</option>
                            <option>Young</option>
                            <option>Adult</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="location">Location Sighted</label>
                        <select name="age">
                            <option>Zone A</option>
                            <option>Zone B</option>
                            <option>Zone C</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="ranger">Your Name</label>
                        <input id="ranger" name="ranger" class="form-control" type="text">
                    </div>
                    <button type="submit" class="btn btn-secondary">Submit Form</button>
                </form>
                </center>
                </div>
            </div>
        </div>
    </div>
    <!--form.hbs.-->
{{/partial}}

